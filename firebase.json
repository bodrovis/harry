{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [{
      "source": "**/*.@(jpg|jpeg|gif|png|css|js|svg|ttf|woff2|webp|eot|woff)",
      "headers": [{
        "key": "Cache-Control",
        "value": "max-age=15552000"
      }]
    }, {
      "source": "404.html",
      "headers": [{
        "key": "Cache-Control",
        "value": "max-age=15552000"
      }]
    }],
    "cleanUrls": true,
    "trailingSlash": true
  }
}
